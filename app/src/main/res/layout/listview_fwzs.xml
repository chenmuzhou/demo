<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/rmtjfw_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:scaleType="fitXY"
        android:src="@mipmap/fws_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/guzhu_fuwu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginTop="@dimen/margin10"
            android:layout_toEndOf="@+id/rmtjfw_img"
            android:layout_toRightOf="@+id/rmtjfw_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/text_font_5"
            tools:text="logo设计" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/guzhu_fuwu_chengjiaol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_5"
                android:textSize="12sp"
                android:text="已成交:3笔"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_5"
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text=" | "/>
            <TextView
                android:id="@+id/guzhu_fuwu_pingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_5"
                android:textSize="12sp"
                android:text="服务评分5.00"/>
        </LinearLayout>
        <TextView
            android:id="@+id/guzhu_fuwu_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1000"
            android:textColor="@color/vip_red"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <com.example.myapplication.CircleImageView
                    android:id="@+id/guzhu_fuwu_head_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/my_is_zuopin"
                    />
                <TextView
                    android:id="@+id/guzhu_fuwu_gongsi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorInfo"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:text="苗子设计工作室"/>
            </LinearLayout>
            <TextView
                android:id="@+id/guzhu_fuwu_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:text="深圳"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>